<ol class="breadcrumb">
  <li><%= link_to "Home", root_path %></li>
  <li class="active">Albums</li>
</ol>

<div class="row">
    <% @albums.each do |album| %>
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= album.name.capitalize %></h3>
          </div>
          <div class="panel-body no-padding">
            <%= link_to (image_tag album.cover.url(:medium), class: "img-responsive"), album %>
          </div>
        </div>
      </div>
    <% end %>
</div>