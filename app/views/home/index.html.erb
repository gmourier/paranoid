<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Burning posts</h3>
      </div>
      <div class="panel-body">
        <% @posts.each do |post| %>
          <div class="clearfix">
            <%= post.title %> <span class="btn btn-sm btn-default pull-right">Read</span>
          </div>
          <br>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= link_to "All posts", posts_path %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Upcoming gigs</h3>
      </div>
      <div class="panel-body">
        <% @concerts.each do |concert| %>
          <div class="clearfix">
            <%= link_to concert.name, concert %>
          </div>
          <br>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= link_to "All concerts", concerts_path %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Last medias</h3>
      </div>
      <div class="panel-body">
        <% @medias.each do |media| %>
          <%= image_tag media.file.url(:thumb) %>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= link_to "All medias", medias_path %>
      </div>
    </div>
    <div class="fb-like-box" data-href="https://www.facebook.com/Paranoidsky" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="false" data-show-border="false"></div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Endorsed by</h3>
      </div>
      <div class="panel-body">
        <% @sponsors.each do |sponsor| %>
          <%= image_tag sponsor.logo.url(:thumb) %>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= link_to "All sponsors", sponsors_path %>
      </div>
    </div>
  </div>
</div>