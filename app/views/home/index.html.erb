<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Burning posts</h3>
      </div>
      <div class="panel-body">
        <% @posts.each do |post| %>
          <div class="clearfix">
            <%= post.title %> <span class="btn btn-sm btn-default pull-right">Read</span>
          </div>
          <br>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= link_to "All posts", posts_path %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Upcoming gigs</h3>
      </div>
      <div class="panel-body">
        <% @concerts.each do |concert| %>
          <div class="clearfix">
            <%= link_to concert.name, concert %>
          </div>
          <br>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= link_to "All concerts", concerts_path %>
      </div>
    </div>
  </div>
</div>