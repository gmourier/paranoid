<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Gallery</h3>
  </div>
  <div class="panel-body">
    <% if !@medias.empty? %>
    <% @medias.each do |media| %>
      <%= link_to image_tag(media.file.url(:thumb), size: "50", alt: media.title.capitalize), media.file.url(:original), class: "fancybox" %>
    <% end %>
    <% else %>
      <i>No media yet</i>
    <% end %>
  </div>
  <div class="panel-footer">
    <%= link_to "All medias", medias_path %>
  </div>
</div>