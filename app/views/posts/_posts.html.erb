<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Lasts Posts</h3>
  </div>
  <div class="panel-body">
    <% @posts.each do |post| %>
      <div class="row">
        <div class="col-xs-12">
          <h4 class="media-heading"><%= link_to post.title, post %></h4>
          <p class="text-justify"><%= truncate(strip_tags(post.content), length: 200) %></p>
          <p class="pull-right">
            <span class="label label-default">keyword</span> 
            <span class="label label-default">tag</span> 
            <span class="label label-default">post</span>
          </p>
          <ul class="list-inline">
            <li><a href="#"><%= distance_of_time_in_words_to_now(post.created_at) %> ago</a></li>
          </ul>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
  <div class="panel-footer">
    <%= link_to "All posts", posts_path %>
  </div>
</div>