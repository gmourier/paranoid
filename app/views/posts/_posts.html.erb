<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Burning posts</h3>
  </div>
  <div class="panel-body">
    <% @posts.each do |post| %>
      <div class="clearfix">
        <%= post.title %> <span class="btn btn-sm btn-default pull-right">Read</span>
      </div>
      <br>
    <% end %>
  </div>
  <div class="panel-footer">
    <%= link_to "All posts", posts_path %>
  </div>
</div>