<ol class="breadcrumb">
  <li><%= link_to "Home", root_path %></li>
  <li><%= link_to "Concerts", concerts_path %></li>
  <li class="active"><%= @concert.name.capitalize %></li>
</ol>

<div class="row">
    <div class="col-md-8">
        <h1><%= @concert.name.capitalize %></h1>
        <p class="text-justify"><%= @concert.description.html_safe %></p>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Location</h3>
          </div>
          <div class="panel-body">
            <%= image_tag @concert.display_map, class: "img-responsive" %>
          </div>
          <div class="panel-footer">
            <%= @concert.country %>, <%= @concert.city %></br>
            <%= @concert.street %>
          </div>
        </div>
        
    </div>
</div>