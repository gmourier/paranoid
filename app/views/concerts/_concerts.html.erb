<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Upcoming Concerts</h3>
  </div>
  <% if !@concerts.empty? %>
    <div class="panel-body no-padding">
      <% @concerts.each do |concert| %>
        <div class="clearfix">
          <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 concert-date">
            <%= concert.show_at.day %>
            <%= concert.show_at.strftime("%b") %>
          </div>
          <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
            <h4><%= link_to concert.name.capitalize, concert %></h4>
            <%= concert.city %>, <%= concert.country %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="panel-body">
      <i>No concert yet</i>
    </div>
  <% end %>
  <div class="panel-footer">
    <%= link_to "All concerts", concerts_path %>
  </div>
</div>